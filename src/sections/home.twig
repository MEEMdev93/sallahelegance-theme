{% extends "layout.twig" %}

{% block content %}
    <section class="hero py-16 bg-gray-100">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl font-bold mb-4">مرحباً بكم في {{ store.name }}</h1>
            <p class="text-lg">{{ store.description }}</p>
        </div>
    </section>

    <section class="products py-12">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-semibold mb-6">أحدث المنتجات</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {% for product in products %}
                    <div class="product-card bg-white shadow rounded p-4">
                        <img src="{{ product.image }}" alt="{{ product.name }}" class="w-full h-48 object-cover mb-4">
                        <h3 class="font-medium">{{ product.name }}</h3>
                        <p class="text-green-600 font-bold">{{ product.price }} ريال</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
